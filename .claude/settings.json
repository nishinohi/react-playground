{
  "permissions": {
    "allow": [
      "Bash(pnpm dev:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm test:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git grep:*)",
      "Bash(npx tsc:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "mcp__playwright",
      "mcp__notion",
      "mcp__context7",
      "mcp__serena"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["playwright", "context7", "serena"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/prevent-read-secrets.js"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/use-git-grep-instead-grep.js"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/use-git-grep-instead-bash-grep.js"
          }
        ]
      }
    ]
  }
}
